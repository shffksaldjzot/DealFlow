FROM node:20-slim

WORKDIR /app

# Install build dependencies for native modules (bcrypt, better-sqlite3, etc.)
RUN apt-get update && apt-get install -y python3 make g++ && rm -rf /var/lib/apt/lists/*

COPY package.json package-lock.json* ./
RUN npm install

COPY . .
RUN npm run build

EXPOSE 4000

CMD ["node", "dist/main"]
